@model Category
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="DeletePOST">
    <input asp-for="id" hidden/>
    <div class="container border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        <div class = "mb-4">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" disabled/>
        </div>
            <div class = "mb-4">
            <label asp-for="DisplayOrder"></label>
            <input class="form-control" asp-for="DisplayOrder" disabled/>
        </div>
        <div class="row justify-content-end p-4">
            <button type="submit" class="col-4 btn btn-danger">Delete</button>
            <a class="col-4 btn btn-secondary" asp-controller="Category" asp-action="Index">Back To List</a>
        </div>
    </div>
</form>