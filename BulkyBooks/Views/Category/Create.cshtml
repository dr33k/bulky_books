@model Category
@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="container border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        <div class = "mb-4">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
            <div class = "mb-4">
            <label asp-for="DisplayOrder"></label>
            <input class="form-control" asp-for="DisplayOrder"/>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row justify-content-end p-4">
            <button type="submit" class="col-4 btn btn-primary">Create</button>
            <a class="col-4 btn btn-secondary" asp-controller="Category" asp-action="Index">Back To List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{  <partial name="_ValidationScriptsPartial"></partial>    }
}