@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Category>;

<div class="container p-3">
    <div class="row pt-4">
        <h1 class="col-6 text-primary">Categories</h1>

        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                &nbsp;
                Add Category
            </a>
        </div>
    </div>
</div>
</br></br>
<table class = "table table-bordered table-striped">
    <thead>
        <tr>
            <td>
                Name
            </td>
            <td>
                Display Order
            </td>
            <td>
                Created At
            </td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach(Category cat in Model){
        <tr>
            <td width=33%>
                @cat.Name
            </td>
            <td width=33%>
                @cat.DisplayOrder
            </td>
            <td width=33%>
                @cat.CreatedAt
            </td>
            <td class="d-flex flex-row">
                <a class="btn-group w-50 align-self-end" role="group" asp-controller="Category" asp-action="Edit" asp-route-id=@cat.id>
                    <icon class="bi bi-pencil-square"></icon>
                </a>
                &nbsp;
                <a class="btn-group w-50 align-self-end" role="group" asp-controller="Category" asp-action="Delete" asp-route-id=@cat.id>
                    <icon class="bi bi-trash"></icon>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>